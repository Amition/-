<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120sp">


    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_netVideo_default"
        android:background="@drawable/video_default"
        android:layout_width="120sp"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_alignRight="@id/iv_netVideo_default"
        android:layout_alignBottom="@id/iv_netVideo_default"
        android:src="@drawable/center_collect_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/tv_video_title"
        android:layout_marginLeft="8sp"
        android:layout_toRightOf="@id/iv_netVideo_default"
        android:text="标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_video_desc"
        android:layout_marginBottom="50sp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20sp"
        android:layout_toRightOf="@id/iv_netVideo_default"
        android:text="描述"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>